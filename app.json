{
  "expo": {
    "name": "Doroosi",
    "description": "Doroosi is a mobile education application.",
    "slug": "Doroosi",
    "version": "1.0.1",
    "orientation": "portrait",
    "scheme": "dooosi",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.doroosi.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FFFFFF"
      },
       
      "permissions": ["ACCESS_FINE_LOCATION"],
      "blockedPermissions": ["Camera"],
      "intentFilters": [
  {
    "action": "VIEW",
    "data": [
      { "scheme": "dooosi", "host": "open" },
      { "scheme": "https", "host": "doroosi.com", "pathPrefix": "/" }
    ],
    "category": ["BROWSABLE", "DEFAULT"]
  }
]
    },
    "web": {
      "output": "single"
    },
    "plugins": [
      "expo-localization",
      "expo-font",
      "expo-asset",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 28
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },

    "extra": {
      "eas": {
        "projectId": "b18a58be-c477-4a2e-b9b2-420fd9a06642"
      }
    },

    "runtimeVersion": {
      "policy": "appVersion"
    },

    "updates": {
      "url": "https://u.expo.dev/b18a58be-c477-4a2e-b9b2-420fd9a06642"
    }
  }
}
